{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build compiler",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/Common/Utils/utils.cpp",
                "${workspaceFolder}/Common/values.cpp",
                "${workspaceFolder}/Common/info.cpp",
                "${workspaceFolder}/Compiler/Lexer/lexer.cpp",
                "${workspaceFolder}/Compiler/Lexer/token.cpp",
                "${workspaceFolder}/Compiler/Lexer/except.cpp",
                "${workspaceFolder}/Compiler/Parser/parser.cpp",
                "${workspaceFolder}/Compiler/Main/main.cpp",
                "-o",
                "${workspaceFolder}/compiler",
                "-Wall",
                "-Wextra",
                "-ggdb"
            ]
        },
        {
            "label": "Build VM",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/Common/Utils/utils.cpp",
                "${workspaceFolder}/Common/values.cpp",
                "${workspaceFolder}/Common/info.cpp",
                "${workspaceFolder}/VM/Lexer/byte_lexer.cpp",
                "${workspaceFolder}/VM/Lexer/byte_consumer.cpp",
                "${workspaceFolder}/VM/Lexer/byte_token.cpp",
                "${workspaceFolder}/Compiler/Lexer/token.cpp",
                "${workspaceFolder}/Compiler/Lexer/consumer.cpp",
                "${workspaceFolder}/VM/Interpreter/interpreter.cpp",
                "${workspaceFolder}/VM/Main/main.cpp",
                "-o",
                "${workspaceFolder}/vm",
                "-Wall",
                "-Wextra",
                "-ggdb"
            ]
        }
    ]
}